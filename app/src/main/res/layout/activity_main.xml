<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.lenovo.laboratoriumpum3.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zabrze"
        android:textSize="20sp"
        android:id="@+id/city"
        android:textColor="@android:color/white"
        android:layout_marginBottom="5sp"/>



    <ImageView
        android:layout_width="176dp"
        android:layout_height="123dp"
        android:id="@+id/picture"
        android:src="@drawable/ic_wb_sunny_black_24dp"
        android:layout_marginBottom="5sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="30 stopni celcjusza"
        android:textColor="@android:color/white"
        android:layout_marginBottom="5sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pamiętaj o filtrze"
        android:textColor="@android:color/white"
        android:layout_marginBottom="5sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Podaj miejsce"
        android:textColor="@android:color/white"
        />

    <EditText
        android:layout_width="363dp"
        android:layout_height="46dp"
        android:orientation="vertical"
        android:id="@+id/insert_name"/>


    <Button
        android:id="@+id/button_change_place"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:background="@android:color/white"
        android:padding="5sp"
        android:text="ZMIEń MIejsce"
        android:textColor="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/button_change_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5sp"
        android:text="POKAż LISTę DOSTEPNYCH MIEJSC"
        android:textColor="@android:color/holo_blue_light"/>

</LinearLayout>
